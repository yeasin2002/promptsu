{
  "name": "@workspace/core",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "lint": "oxlint src"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "default": "./dist/auth.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    }
  },
  "dependencies": {
    "@workspace/typescript-config": "workspace:*",
    "better-auth": "catalog:core",
    "tsdown": "catalog:core",
    "zod": "catalog:core"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "typescript": "catalog:core"
  }
}
