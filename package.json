{
  "name": "promptverse-ai",
  "private": true,
  "scripts": {
    "check": "oxlint",
    "dev": "turbo dev -F=!extension -F=!native",
    "start": "turbo start -F=!extension -F=!native",
    "build": "turbo build ",
    "build:web": "turbo build -F web build",
    "check-types": "turbo check-types",
    "lint": "ultracite format",
    "format": "@biomejs/biome check --write",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:extension": "turbo -F extension dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "configs/*"
    ],
    "catalogs": {
      "core": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "typescript": "^5",
        "tailwindcss": "^4.1.12",
        "@tailwindcss/postcss": "^4.1.10",
        "postcss": "^8.5.6",
        "zod": "^4.0.2",
        "tsdown": "^0.14.2",
        "rolldown": "^1.0.0-beta.34"
      },
      "types": {
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "ultracite": "5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "oxlint": "^1.12.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  },
  "packageManager": "bun@1.2.18",
  "dependencies": {
    "@ai-sdk/google": "^2.0.11",
    "ai": "^5.0.25"
  }
}
