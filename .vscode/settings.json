{
  "files.associations": { "*.css": "tailwindcss" },
  "editor.defaultFormatter": "biomejs.biome",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "emmet.showExpandedAbbreviation": "never",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "cSpell.words": [
    "deepseek",
    "nativewind",
    "oxlint",
    "promptverse",
    "tsdown",
    "Turborepo",
    "ultracite"
  ],
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "docker-compose.yml": "docker-compose.individual.yml*, docker-compose.yml, Dockerfile.server, Dockerfile.web, .dockerignore",
    "README.md": "docker-doc.md, README.docker.md, CONTRIBUTING.md",
    "package.json": "next-env.d.ts, .env.production",
    "turbo.json": "tsconfig.json, tailwind.config.ts, biome.json, .oxlintrc.json"
  },
  "files.exclude": {
    "**/.claude": true,
    "**/.cursor": true,
    "**/.next": true,
    "**/.kiro": false,
    "**/.turbo": true,
    "**/.windsurf": true,
    "**/.husky": true,
    "**/.github": true,
    "**/bun.lock": true,
    "**/bunfig.toml": true,
    "**/node_modules": true,
    "**/.gitignore": false,
    "**/.gitkeep": true,
    "**/.cache": true,
    "**/.expo": true,
    "**/dist": true,
    "**/.wxt": true
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
