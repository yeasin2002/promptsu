{
	"name": "promptsu",
	"description": "A browser extension that adds AI-powered prompt enhancement to AI chatbot interface and collection of prompts to copy and paste",
	"displayName": "promptsu",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/react-query": "^5.85.5",
		"@types/chrome": "^0.1.11",
		"@workspace/core": "workspace:*",
		"@workspace/tailwind-config": "workspace:*",
		"@workspace/ui": "workspace:*",
		"@workspace/validation": "workspace:*",
		"lucide-react": "catalog:core",
		"orpc": "^0.1.1",
		"postcss": "catalog:core",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@types/react": "catalog:types",
		"@types/react-dom": "catalog:types",
		"@wxt-dev/module-react": "^1.1.3",
		"typescript": "catalog:core",
		"wxt": "^0.20.8"
	}
}
