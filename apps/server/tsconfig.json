{
  "extends": "@workspace/typescript-config/base.json",
  "include": ["src/**/*", "scripts/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "types": ["bun"],
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noEmit": false
  }
}
