{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "start": "node --require dotenv/config dist/index.js",
    "dev": "concurrently \"tsdown src/index.ts --watch --outDir dist\" \"nodemon --require dotenv/config dist/index.js\"",
    "dev:bun": "bun run --hot src/index.ts",
    "check-types": "tsc -b",
    "compile": "node build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@ai-sdk/google-vertex": "^3.0.13",
    "@better-auth/expo": "^1.3.4",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.0",
    "@neondatabase/serverless": "^1.0.1",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "@types/bun": "^1.2.21",
    "@workspace/core": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@workspace/validation": "workspace:*",
    "add": "^2.0.6",
    "better-auth": "^1.3.4",
    "bun": "^1.2.21",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "nodemon": "^3.1.10",
    "rolldown": "catalog:core",
    "tsdown": "catalog:core",
    "ws": "^8.18.3",
    "zod": "catalog:core"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.2",
    "semver": "7.5.4",
    "typescript": "catalog:core"
  }
}
